<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="DEBUG">
    <Appenders>
        <Console name="LogToConsole" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{ISO8601}{GMT+0} %-5level %logger{36} - %msg%n"/>
        </Console>
        <File name="LogToFile" fileName="logs/nutrition.log">
            <PatternLayout>
                <Pattern>%d{ISO8601}{GMT+0} %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
	    <Logger name="br.com.sistema" level="debug" additivity="false">
	        <AppenderRef ref="LogToConsole"/>
	    </Logger>
	
	    <Root level="info">
	        <AppenderRef ref="LogToConsole"/>
	        <AppenderRef ref="LogToFile"/>
	    </Root>
	</Loggers>
</Configuration>